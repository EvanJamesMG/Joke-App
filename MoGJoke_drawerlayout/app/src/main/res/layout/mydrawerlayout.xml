<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--主布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment
            android:id="@+id/fragmentone"
            android:name="com.example.evanjames.mogjoke.fragment.FragmentOne"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:layout_width="fill_parent"
            tools:layout="@layout/layone" />
        <fragment
            android:id="@+id/fragmenttwo"
            android:name="com.example.evanjames.mogjoke.fragment.FragmentTwo"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:layout_width="fill_parent"
            tools:layout="@layout/laytwo" />
        <fragment
            android:id="@+id/fragmentthree"
            android:name="com.example.evanjames.mogjoke.fragment.FragmentThree"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:layout_width="fill_parent"
            tools:layout="@layout/laythree" />
        <fragment
            android:id="@+id/fragmentfour"
            android:name="com.example.evanjames.mogjoke.fragment.FragmentFour"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:layout_width="fill_parent"
            tools:layout="@layout/layfour" />
    </LinearLayout>


    <!--侧滑菜单-->
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="start">
        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:divider="#00000000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp">
            <ImageButton
                android:id="@+id/Exit_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/exitbtnimg_selector"/>
            <TextView
                android:id="@+id/Exit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="#000000"
                android:text="Exit"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>